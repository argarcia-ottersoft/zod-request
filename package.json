{
  "name": "zod-web-api",
  "description": "Zod Web API simplifies the process of integrating Zod with Web APIs including Request, URLSearchParams, and FormData.",
  "version": "0.1.1",
  "type": "module",
  "author": "Armando Garcia <armando.garcia@ottersoft.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/ottersoft-x/zod-web-api"
  },
  "license": "MIT",
  "files": [
    "dist"
  ],
  "module": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "test": "vitest",
    "format": "run-s format:*",
    "format:prettier": "prettier . --write",
    "format:lint": "eslint --fix --report-unused-disable-directives .",
    "format:tsc": "tsc"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "npm-run-all": "^4.1.5",
    "prettier": "3.0.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.7",
    "vite-plugin-dts": "^3.3.1",
    "vitest": "^0.33.0"
  },
  "peerDependencies": {
    "zod": "^3.21.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "volta": {
    "node": "18.17.0"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": "off"
    }
  },
  "prettier": {
    "printWidth": 120
  },
  "bugs": {
    "url": "https://github.com/ottersoft-x/zod-web-api/issues"
  },
  "keywords": [
    "zod",
    "typescript",
    "schema",
    "validation",
    "type",
    "inference",
    "web-apis",
    "validation",
    "url-search-params",
    "form-data",
    "zod-web-api",
    "zod-request"
  ]
}
